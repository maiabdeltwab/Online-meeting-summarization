#:include connected.kv
#:include incall.kv

<Login>:
    BoxLayout:
        orientation:'vertical'
        padding:200, 80, 200, 80
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source:'imgs/bg.png'
		BoxLayout:
			orientation:'vertical'
			canvas:
				Color:
					rgba: 29,140,248,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'vertical'
                size_hint: 1, .3
                canvas:
                    Color:
                        rgba: .03, .56, .74, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: (10.0, 10.0), (10.0, 10.0), (0.0, 0.0), (0.0, 0.0)
                BoxLayout:
                    orientation:'vertical'
                    padding:0,10,0,10
                    Label:
                        text:'Meetapp'
                        font_size:30
                    Image:
                        source:'imgs/lock.png'
			BoxLayout:
                orientation:'vertical'
                padding:100, 50, 100, 50
                spacing:25
                BoxLayout:
                    size_hint: 1, .1
                    TextInput:
                        id:nick
                        padding: 15, 15, 15, 5
                        hint_text: 'Username'
                        font_size:15
                        write_tab:False
                        multiline: False
                        background_color:(0,0,0,.05)
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: 1, .1
                    TextInput:
                        id:password
                        padding: 15, 15, 15, 5
                        hint_text: 'Password'
                        font_size:15
                        write_tab:False
                        multiline: False
                        password: True
                        background_color:(0,0,0,.05)
                BoxLayout:
                    orientation:'horizontal'
                    size_hint: .3, .1
                    CheckBox:
                        size_hint: .20, 1
                        background_checkbox_down: 'imgs/checkbox.png'
                    Label:
                        text:'Keep me logged in'
                        size_hint: 1, 1
                        color: (0,0,0,1)
                BoxLayout:
                    size_hint: 1, .1
                    canvas:
                        Color:
                            rgba: .03, .56, .74, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: (05.0, 05.0), (05.0, 05.0), (05.0, 05.0), (05.0, 05.0)
                    Button:
                        text:'Login'
                        background_color: (1, 1, 1, 0)
                        on_press:  root.do_login(nick.text, password.text)

